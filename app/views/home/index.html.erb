


<div class="hero-unit span12">  
  <div class="row">
    <div class="span6 pagination-centered">

      <div class="well">
        <h1> <%=@word.noun%> </h1>
      </div>
    </div>

    <div class="span4 offset2 pagination-centered">
      <div class="well well-large">
      <%= link_to "Sign up!", signup_path, class: "btn btn-large btn-primary" %>
      </div>
    </div>
  </div>

  <div class="row">
    <%= form_for(@word, :url => check_url(:id => @word.id)) do %>
      <% # send the clicked one to the home/check action, see match route %>
      <div class="span2">
        <p>
        <%= submit_tag "Der", name: "chose_der",class: "btn btn-large btn-inverse btn-block" %>
        </p>
      </div>
      <div class="span2">
        <p>
        <%= submit_tag "Die", name: "chose_die",class: "btn btn-large btn-danger btn-block" %>
        </p>
      </div>
      <div class="span2">
        <p>
        <%= submit_tag "Das", name: "chose_das",class: "btn btn-large btn-warning btn-block" %>
        </p>
      </div>
    <% end %>
  </div>


</div>

    <small>
    <p> Frequency <%=@word.weight%>  (1 uncommon, 10 most common)</p>
    <% if signed_in? %>
      <p> Level <%=current_user.word_level(@word)%> (1 master, 10 no clue)</p>
    <% end %>
    </small>
