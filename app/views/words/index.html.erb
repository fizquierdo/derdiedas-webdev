<h1>Training Words</h1>
<table class="table-stripped table">
  <tr>
    <th>Article</th>
    <th>Noun</th>
    <th>Weight</th>
    <% if signed_in? %>
    <th>Level</th>
    <th>Prob</th>
    <% end %>
    <th>Definitions</th>
  </tr>
<% @words.each do |word| %>
  <tr>
    <td><%= word.article %></td>
    <td><%= word.noun %></td>
    <td><%= word.weight %></td>
    <% if signed_in? %>
    <td><%= current_user.word_level(word) %></td>
    <td><%= current_user.word_prob(word) %></td>
    <% end %>
    <td><%= word.definitions %></td>
  </tr>
<% end %>
</table>
<br />
