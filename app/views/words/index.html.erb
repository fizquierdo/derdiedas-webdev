<h1>Listing words</h1>

<table class="table-stripped table">
  <tr>
    <th>Noun</th>
    <th>Article</th>
    <th>Weight</th>
    <% if signed_in? %>
    <th>Level</th>
    <th>Prob</th>
    <% end %>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.noun %></td>
    <td><%= word.article %></td>
    <td><%= word.weight %></td>
    <% if signed_in? %>
    <td><%= current_user.word_level(word) %></td>
    <td><%= current_user.word_prob(word) %></td>
    <% end %>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

